{
  "ISOFIT_BASE": "../../..",

  "input": {
    "measured_radiance_file": "../remote/ang20171108t184227_rdn_v2p11_BeckmanLawn.txt",
    "reference_reflectance_file": "../insitu/BeckmanLawn.txt"
  },

  "output": {
    "estimated_reflectance_file": "../output/ang20171108t184227_rfl_v2p11_BeckmanLawn.txt",
    "algebraic_inverse_file": "../output/ang20171108t184227_alg_v2p11_BeckmanLawn.txt",
    "modeled_radiance_file":  "../output/ang20171108t184227_mdl_v2p11_BeckmanLawn.txt",
    "data_dump_file":         "../output/ang20171108t184227_data_v2p11_BeckmanLawn.mat",
    "posterior_uncertainty_file":  "../output/ang20171108t184227_uncert_v2p11_BeckmanLawn.txt",
    "plot_directory": "../images/"
  },

  "forward_model":{

    "instrument": {
      "wavelength_file": "../remote/20170320_ang20170228_wavelength_fit.txt",
      "parametric_noise_file": "../../../data/avirisng_noise.txt",
      "integrations":294,
      "unknowns": {
        "channelized_radiometric_uncertainty_file": 
          "../../../data/avirisng_systematic_error.txt",
        "uncorrelated_radiometric_uncertainty": 0.01
      }
    },

    "surface": {
      "surface_category": "multicomponent_surface",
      "surface_file": "../remote/ang20170228_surface_model.mat"
    },

    "radiative_transfer": {
      "statevector": {
        "H2OSTR": {
          "bounds": [0.0, 4.7],
          "scale": 0.01,
          "prior_mean": 1.75,
          "prior_sigma":0.5,
          "init": 1.75
        },
        "AOT550": {
          "bounds": [0.05, 0.8],
          "scale": 0.01,
          "prior_mean": 0.05,
          "prior_sigma":0.2,
          "init": 0.05
        }
      },
      "lut_grid": {
        "H2OSTR": [0.0, 1.0, 1.5, 2.0, 2.7, 3.5, 4.7],
        "AOT550": [0.05, 0.12, 0.2, 0.3, 0.4, 0.8]
      },
      "unknowns": {
        "H2O_ABSCO": 0.01
      },
      "radiative_transfer_engines": {
        "vswir": {
          "engine_name": "modtran",
          "wavelength_range":[370,2505],
          "lut_path": "../lut/",
          "template_file": "ang20171108t184227_modtran.json",
          "lut_names": ["H2OSTR", "AOT550" ]
        }
      }
    }
  },

  "implementation": {
    "mode": "inversion",
    "inversion": {
      "windows": [[380.0, 1300.0], [1450, 1780.0], [1950.0, 2450.0]]
    },
    "rte_auto_rebuild": false
  }
}
